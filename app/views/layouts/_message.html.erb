<% flash.each do |name, msg| %>
  <%# Add flash only if the message is a string %>
  <% if msg.is_a?(String) %>
    <script type="text/javascript">
      $(function() {
        noty({
          type: '<%= name == :alert ? "success" : "error" %>',
          text: '<%= msg %>',
          timeout: <%= name == :alert ? 4000 : 30000 %>
        });
      });
    </script>
  <% end %>
<% end %>