<div class="background">
  <div class="row">
    <div class="large-12 columns">
      <h1 class='pagehead logo'>ParDIY</h1>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns large-offset-3">
      <h2>Reset Your Password</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-3 columns large-offset-2">
      <%= form_for @user, url: password_path, html: { autocomplete: :off } do |f| %>
        <p>
          <%= f.label :password %>
          <%= f.password_field :password, autofocus: true %>
        </p>
        <p>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </p>
        <p>
          <input id="hidden-strength" type="hidden" name="strength" value="0">
          <%= f.hidden_field :code %>
          <%= f.submit "Save password", id: "save-password", class: "button alert disabled" %>
        </p>
      <% end %>
    </div>
    <div class="large-7 columns">
      <div class="progress large-5 strength-meter">
        <span id="strength-meter" class="meter w-0"></span>
      </div>
      <div>Time to crack: <span id="time-to-crack">n/a</span>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/zxcvbn-async.js"></script>