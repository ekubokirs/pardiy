<%#= Over all page %>
<div class="background">

	<%#= Page Logo%>
	<div class= "row">
		<div class="large-12 columns">
			<h1 class="pagehead logo">ParDIY</h1>
		</div>
	</div>

	<%#= First row beneath Logo%>
	<%= form_for @user do |f| %>
		<div class="row">
			<div class= "large-4 columns">
				<p class="row">
					<div class="emaildisp">
						<p> Welcome!  You are logged in as:
						<%= @user.email %>.
						</p>
						<p>Let's get your profile started!</p>
					</div>
				</p>

				<p>
					<%= f.label :Password %>
					<%= f.text_field :fish %>
				</p>

				<%= f.label :birthdate %>
				<%= f.date_field :birthdate %>
			
				<%= f.label :zip %>
				<%= f.text_field :city %>

			</div>

			<div class= "large-8 columns">	
							
			</div>
		</div>
		<div class="row">
			<div class="large-12">	
				<p>
					<%= f.label :bio %>
					<%= f.text_area :bio %>
				</p>
				<p>
					<%= f.submit %>
				</p>
			</div>
		</div>	
	<% end %>
</div> 

