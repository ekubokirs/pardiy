<%#= Over all page %>
<div class="background">

	<%#= Page Logo%>
	<div class= "row">
		<div class="large-12 columns">
			<h1 class="pagehead logo">ParDIY</h1>
		</div>
	</div>

	<%#= First row beneath Logo%>
	<div class="row">
		<%= form_for :user do |f| %>
		<p>
			<%= f.label :email %><br>
			<%= f.text_field :email %>
		</p>

		<p>
			<%= f.label :fish %><br>
			<%= f.text_field :fish %>
		</p>

		<p>
			<%= f.submit %>
		</p>
		<% end %>

		<%= form_for @profile do |f| %>
		<p>
			<%= f.label :birthdate %><br>
			<%= f.date_field :birthdate %>
		</p>

		<p>
			<%= f.label :city %><br>
			<%= f.text_field :city %>
		</p>

		<p>
			<%= f.label :state %><br>
