<%= form_for @event, html: { autocomplete: :off } do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="row">
    <p class="large-6 columns">
      <%= f.label :venue %>
      <%= f.select :venue, options_for_select(%w[Home Indoor Outdoor Multiple], @event.venue) %> 
    </p>
    <p class="large-6 columns">
      <%= f.label :event_type %>
      <%= f.select :event_type, options_for_select(["Adult's Birthday", "Baby Shower", "Bachelor/Bachelorette", "Child's Birtday", "Graduation", "Holiday", "Housewarming," "Wedding", "Wedding Shower", "Other"], @event.event_type) %>
    </p>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <div class="supplyblock">
        <% @event.supplies.each do |sup| %>
          <%= f.label :supplies %>
          <%= f.fields_for :supplies, sup do |s| %>
            <ul>
              <li> 
                <%= s.text_field :amount, :class => "large-5 columns" %> 
                <%= s.text_field :supply, :class => "large-6 columns" %>
              </li>
            </ul>
          <% end %>
        <% end %>
      </div>
     <!--  <span>
        <a href="#" class="supplyblockadd link">+Add Supply</a>
      </span> -->
    </div>
    <div class="large-6 columns">
      <div class="projectblock">
        <% @event.chores.each do |cho| %>
          <%= f.label :projects %>
          <%= f.fields_for :chores, cho do |p| %>
            <ul>
              <li> 
                <%= p.text_field :chore %> 
              </li>
            </ul>
          <% end %>
        <% end %>
      </div>
      <!-- <span>
        <a href="#" class="projectblockadd link">+Add Project</a>
      </span> -->
    </div>
  </div>
  <p class="row">
  <%= f.submit :class => "small button" %>
  </p>
<% end %>