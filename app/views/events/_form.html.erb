<%= form_for @event, html: { autocomplete: :off } do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.label :venue %>
      <%= f.text_field :venue %>
    </div>
    <div class="large-6 columns">
      <%= f.label :event_type %>
      <%= f.text_field :event_type %>
    </div>
  </div>
  <div>
    <%= f.submit :class => "small button" %>
  </div>
<% end %>