<div class="background">
	<div class="row">
		<div class="large-12 columns">
			<h1 class='pagehead logo'>ParDIY</h1>
		</div>
	</div>
	<div class="row">
		<div class="large-6 columns large-offset-3 pagetitle">
			<span>New Event</span>
		</div>
	</div>
	<form action="/events" method="POST">
		<div class="row">
			<div class="large-12 columns">
				<label>Event Name</label>
				<input name="title" type="text" placeholder="Theresa's Wedding Shower">
			</div>
		</div>
		<div class="row">
			<div class="large-4 columns">
				<label>Event Location</label>
				<select name="venue" id="customDropdown" class="large">
					<option>Home</option>
					<option>Indoor Venue</option>
					<option>Outdoor Venue</option>
					<option>Multiple Locations</option>
				</select>
			</div>
			<div class="large-4 columns">
				<label>Event Type</label>
				<select name="event_type" id="customDropdown" class="large">
					<option>Wedding</option>
					<option>Child's Birthday</option>
					<option>Wedding Shower</option>
					<option>Baby Shower</option>
					<option>Holiday</option>
					<option>Bachelor/Bachlorette</option>
				</select>
			</div>
		</div>

		<div class="row">
			<div class="large-6 columns">
				<label class="details">Needed Supplies</label>
				<label>Amount</label>
				<div class="supplyblock">
					<input type="text" class="large-5 columns" placeholder="12 packages"/>
					<input type="text" class="large-5 columns large-offset-1" placeholder="mailing labels"/><hr />
				</div>
				<span>
					<a href="#" class="supplyblockadd link">+ Add Supply</a>
				</span>
			</div>
			<div class="large-6 columns project">
				<div class="row">
					<label>Project To Do</label>
					<div class="projectblock">
						<input type="text" placeholder="Make Invitations">
					</div>
					<span>
						<a href="#" class="projectblockadd link">+ Add Project</a>
					</span>
				</div>
			</div>
		</div>
		<button type="submit" class="tiny button">Save &amp; Continue</button>
	</form>
</div>